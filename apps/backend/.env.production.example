# ============================================
# MarketFin Backend - Production Environment
# ============================================
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
PORT=3001
API_URL=https://api.marketfin.com.br
FRONTEND_URL=https://app.marketfin.com.br

# Database (AWS RDS PostgreSQL)
DATABASE_URL=postgresql://marketfin_admin:YOUR_PASSWORD@marketfin-db.xxxxx.us-east-1.rds.amazonaws.com:5432/marketfin?schema=public&sslmode=require

# Redis (AWS ElastiCache)
REDIS_URL=rediss://marketfin-redis.xxxxx.cache.amazonaws.com:6379
REDIS_TLS=true

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Payments
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_PRO=price_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Marketplace Integrations
# Mercado Livre
ML_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ML_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ML_REDIRECT_URI=https://api.marketfin.com.br/integrations/mercado-livre/callback

# Amazon SP-API
AMAZON_CLIENT_ID=amzn1.application-oa2-client.xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AMAZON_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AMAZON_REFRESH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AMAZON_MARKETPLACE_ID=A2Q3Y263D00KWC
AMAZON_SELLER_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Shopee
SHOPEE_PARTNER_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SHOPEE_PARTNER_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SHOPEE_REDIRECT_URI=https://api.marketfin.com.br/integrations/shopee/callback

# Magalu
MAGALU_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MAGALU_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_S3_BUCKET=marketfin-exports-production

# Monitoring
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxx@o123456.ingest.sentry.io/123456
DATADOG_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DATADOG_APP_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Security
JWT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ENCRYPTION_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# LGPD/GDPR
DATA_RETENTION_DAYS=30
ANONYMIZATION_ENABLED=true

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_EXPORTS=true
ENABLE_ANALYTICS=true
