# ============================================
# MarketFin Backend - Development Environment
# ============================================

# Application
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Database (Local PostgreSQL via Docker)
DATABASE_URL=postgresql://dev:dev@localhost:5432/marketfin?schema=public

# Redis (Local via Docker)
REDIS_URL=redis://localhost:6379
REDIS_TLS=false

# Clerk Authentication (Development Keys - Get from clerk.com)
# Create a free account at https://clerk.com and get your keys
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Payments (Test Mode - Get from stripe.com)
# Create a free account at https://stripe.com and get your test keys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_PRO=price_test_pro
STRIPE_PRICE_ENTERPRISE=price_test_enterprise

# Marketplace Integrations (Development/Sandbox)
# Mercado Livre - https://developers.mercadolivre.com.br
ML_CLIENT_ID=your_ml_client_id
ML_CLIENT_SECRET=your_ml_client_secret
ML_REDIRECT_URI=http://localhost:3001/integrations/mercado-livre/callback

# Amazon SP-API - https://sellercentral.amazon.com.br
AMAZON_CLIENT_ID=amzn1.application-oa2-client.xxxxxxxx
AMAZON_CLIENT_SECRET=your_amazon_secret
AMAZON_REFRESH_TOKEN=your_refresh_token
AMAZON_MARKETPLACE_ID=A2Q3Y263D00KWC
AMAZON_SELLER_ID=your_seller_id

# Shopee - https://open.shopee.com
SHOPEE_PARTNER_ID=your_partner_id
SHOPEE_PARTNER_KEY=your_partner_key
SHOPEE_REDIRECT_URI=http://localhost:3001/integrations/shopee/callback

# Magalu
MAGALU_CLIENT_ID=your_magalu_client_id
MAGALU_CLIENT_SECRET=your_magalu_client_secret

# AWS (Optional for local development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=marketfin-exports-dev

# Monitoring (Optional for local development)
SENTRY_DSN=
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Security
JWT_SECRET=dev-jwt-secret-change-in-production-minimum-32-chars
ENCRYPTION_KEY=dev-encryption-key-change-in-prod
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000

# LGPD/GDPR
DATA_RETENTION_DAYS=30
ANONYMIZATION_ENABLED=false

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_EXPORTS=true
ENABLE_ANALYTICS=false

# Cron Jobs
CRON_SECRET=dev-cron-secret-change-in-production
